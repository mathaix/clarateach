# ClaraTeach Backend Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Database (PostgreSQL/Neon)
# =============================================================================
# Connection string for PostgreSQL database
# Can also be stored in GCP Secret Manager as "DATABASE_URL"
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# =============================================================================
# GCP Configuration (required)
# =============================================================================
GCP_PROJECT=your-gcp-project-id
GCP_ZONE=us-central1-a
GCP_REGISTRY=us-central1-docker.pkg.dev/your-project/clarateach

# Use spot/preemptible VMs (cheaper but can be terminated)
GCP_USE_SPOT=false

# =============================================================================
# Server Configuration
# =============================================================================
PORT=8080

# CORS origins (comma-separated, or "*" for all)
CORS_ORIGINS=https://learn.claramap.com,http://localhost:5173

# Disable authentication (for development only!)
AUTH_DISABLED=false

# =============================================================================
# Firecracker Configuration (optional)
# =============================================================================
# Snapshot name for Firecracker VMs
FC_SNAPSHOT_NAME=clara2-snapshot-20260117-auth

# Agent authentication token (can be stored in GCP Secret Manager as "FC_AGENT_TOKEN")
FC_AGENT_TOKEN=your-agent-token

# Backend URL for callbacks
BACKEND_URL=https://learn.claramap.com

# Secret for signing workspace tokens (can be stored in GCP Secret Manager as "WORKSPACE_TOKEN_SECRET")
WORKSPACE_TOKEN_SECRET=your-secret-key
